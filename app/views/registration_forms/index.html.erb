<p id="notice"><%= notice %></p>

<h1>Registration Forms</h1>

<table>
  <thead>
    <tr>
      <th>Form number</th>
      <th>Partner</th>
      <th>Sport type</th>
      <th>Record status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @registration_forms.each do |registration_form| %>
      <tr>
        <td><%= registration_form.form_number %></td>
        <td><%= registration_form.partner.name %></td>
        <td><%= registration_form.sport_type.name %></td>
        <td><%= registration_form.record_status %></td>
        <td><%= link_to 'Show', registration_form %></td>
        <td><%= link_to 'Edit', edit_registration_form_path(registration_form) %></td>
        <td><%= link_to 'Destroy', registration_form, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="fixed-action-btn">
  <%= link_to new_registration_form_path, class: "btn-floating btn-large waves-effect waves-light blue" do %>
    <i class="material-icons">add</i>
  <% end %>
</div>