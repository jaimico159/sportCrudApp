<p id="notice"><%= notice %></p>

<h1>Sport Types</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Record status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sport_types.each do |sport_type| %>
      <tr>
        <td><%= sport_type.code %></td>
        <td><%= sport_type.name %></td>
        <td><%= sport_type.record_status %></td>
        <td><%= link_to 'Show', sport_type %></td>
        <td><%= link_to 'Edit', edit_sport_type_path(sport_type) %></td>
        <td><%= link_to 'Destroy', sport_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="fixed-action-btn">
  <%= link_to new_sport_type_path, class: "btn-floating btn-large waves-effect waves-light blue" do %>
    <i class="material-icons">add</i>
  <% end %>
</div>